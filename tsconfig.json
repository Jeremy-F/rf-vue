{
  "include": ["./src/*"],
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "module": "esnext",
    "moduleResolution": "node",
    "target": "esnext",
    "experimentalDecorators": true,
    "types": ["node"],
    // typeRoots option has been previously configured
    "typeRoots": [
      // add path to @types
      "node_modules/@types"
    ],
    "isolatedModules": false
  }
}